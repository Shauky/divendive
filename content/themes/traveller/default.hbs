                </ul>
                    <span>&nbsp;<a href="{{@blog.url}}/contact">CONTACT US</a></span>
               <div id="search-wrap">
                 <script src="{{asset "js/jquery.ghostHunter.min.js"}}" ></script>
                 <form name="search-form" target="_blank" autocomplete="on">
                  <input id="search-field" name="search" type="text" class="form-control" placeholder="search">
                  <input id="search_submit" type="submit" value="Traveller" data-instant>
                 </form>
              </div>
          </div>
        </div>
    <div class="container">
       <div id="body-wrapper" ng-controller="boatController">
